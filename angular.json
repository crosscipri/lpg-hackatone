{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "cli": {
    "analytics": false
  },
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "yourAppName": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss"
        },
        "@schematics/angular:application": {
          "strict": true
        }
      },
      "root": "",
      "sourceRoot": "src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "baseHref": "/yourAppName",
            "outputPath": "dist/",
            "index": "src/index.html",
            "main": "src/main.ts",
            "polyfills": "src/polyfills.ts",
            "tsConfig": "tsconfig.app.json",
            "allowedCommonJsDependencies": ["opentracing/lib/span", "opentracing/lib/tracer"],
            "assets": [
              {
                "glob": "**/*",
                "input": "node_modules/@mercadona/styles/fonts",
                "output": "/assets/fonts/"
              },
              "src/favicon.ico",
              "src/assets"
            ],
            "styles": [
              "node_modules/@taiga-ui/core/styles/taiga-ui-theme.less",
              "node_modules/@taiga-ui/core/styles/taiga-ui-fonts.less",
              "node_modules/@taiga-ui/styles/taiga-ui-global.less",
              "src/styles.scss"
            ],
            "scripts": []
          },
          "configurations": {
            "production": {
              "outputHashing": "all",
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "2mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "4kb"
                }
              ]
            },
            "development": {
              "buildOptimizer": false,
              "optimization": false,
              "vendorChunk": true,
              "extractLicenses": false,
              "sourceMap": true,
              "namedChunks": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "browserTarget": "yourAppName:build",
            "proxyConfig": "src/proxy.conf.js"
          },
          "configurations": {
            "production": {
              "browserTarget": "yourAppName:build:production"
            },
            "development": {
              "browserTarget": "yourAppName:build:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "src/test.ts",
            "polyfills": "src/polyfills.ts",
            "tsConfig": "tsconfig.spec.json",
            "karmaConfig": "karma.conf.js",
            "codeCoverage": true,
            "watch": true,
            "assets": ["src/favicon.ico", "src/assets"],
            "styles": [
              "node_modules/@mercadona/styles/sass/reset.scss",
              "node_modules/@mercadona/styles/sass/bootstrap-grid.scss",
              "node_modules/@mercadona/styles/sass/fonts/font-face.scss",
              "node_modules/@mercadona/styles/sass/themes/base-theme.scss",
              "node_modules/@mercadona/styles/sass/elements.scss",
              "node_modules/@angular/cdk/overlay-prebuilt.css",
              "src/styles.scss"
            ],
            "codeCoverageExclude": [
              "src/test.ts",
              "src/main.ts",
              "src/polyfills.ts",
              "src/app/api/swagger/**/*",
              "src/app/mocks/**/*"
            ],
            "scripts": []
          }
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": [
              "src/**/*.ts",
              "src/**/*.js",
              "src/**/*.html",
              "e2e/**/*.ts",
              "e2e/**/*.js",
              "e2e/**/*.html",
              "scripts/**/*.js",
              "*.js",
              ".*.js"
            ]
          }
        },
        "e2e": {
          "builder": "@angular-devkit/build-angular:protractor",
          "options": {
            "protractorConfig": "e2e/protractor.conf.js",
            "devServerTarget": "yourAppName:serve"
          },
          "configurations": {
            "production": {
              "devServerTarget": "yourAppName:serve:production"
            }
          }
        }
      }
    }
  },
  "defaultProject": "yourAppName"
}
